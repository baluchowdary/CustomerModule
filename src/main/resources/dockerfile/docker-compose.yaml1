version: '3.5'

services:
  apigateway:
    image: kolludocker/apigateway-apigateway:0.0.1-phase3
    mem_limit: 1024m
    ports:
      - "8765:8765"
    networks:
      - kollunet
    depends_on:
      - eurekaserver  
    environment:
      EUREKA.CLIENT.SERVICEURL.DEFAULTZONE: http://eurekaserver:8761/eureka
    environment:
      - TZ="Asia/Kolkata"
      
  bankmodule:
    image: kolludocker/bank-bankmodule:0.0.1-phase5
    mem_limit: 10240m
    ports:
      - "9096:9096"
    networks:
      - kollunet
    depends_on:
      - eurekaserver
    environment:
      EUREKA.CLIENT.SERVICEURL.DEFAULTZONE: http://eurekaserver:8761/eureka
    environment:
      - TZ="Asia/Kolkata"
      
  customermodule:
    image: kolludocker/customer-customermodule:0.0.1-phase5
    mem_limit: 1024m
    ports:
      - "9095:9095"
    networks:
      - eurekaserver-network
    depends_on:
      - kollunet
    environment:
      EUREKA.CLIENT.SERVICEURL.DEFAULTZONE: http://eurekaserver:8761/eureka  
    environment:
      - TZ="Asia/Kolkata"
             
  eurekaserver:
    image: kolludocker/eurekaserver-eurekaserver:0.0.1-phase2
    mem_limit: 1024m
    ports:
      - "8761:8761"
    networks:
      - kollunet
    environment:
      - TZ="Asia/Kolkata"
      
networks:
  kollunet:
  